			<version>1.2</version>
		</dependency>
		<!-- el : Java코드를 간결하게 사용하는 방법, 표현 하고자 하는 코드 -> ${value}의 형식 -->
		<dependency>
			<groupId>javax.el</groupId>
			<artifactId>javax.el-api</artifactId>
			<version>3.0.0</version>
			<scope>provided</scope>

<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<!-- POM 모델 버전 -->
	<modelVersion>4.0.0</modelVersion>
	<!-- 그룹ID:프로젝트를 만들때 입력 -->
	<groupId>kr.letech</groupId>
	<!-- 아티팩트ID : 프로젝트에 할당한 고유 ID -->
	<artifactId>study_board</artifactId>
	<!-- 프로그램버전 -->
	<version>0.0.1-SNAPSHOT</version>
	<!-- 패키지 종류 :Web어플리케이션의 개발은 war -->
	<packaging>war</packaging>



	<!-- properties : pom.xml에 서 사용하는 속성값들을 모아둔다. -->
	<properties>
		<!-- java version -->
		<java-version>1.8</java-version>
		<!-- springframework-version -->
		<org.springframework-version>4.3.24.RELEASE</org.springframework-version>
		<org.aspectj-version>1.9.4</org.aspectj-version>
		<!-- test용 slf4j -->
		<org.slf4j-version>1.7.28</org.slf4j-version>
		<!-- log4j 버전 -->
		<org.apache.log4j-version>2.12.1</org.apache.log4j-version>
	</properties>



	<!-- maven의 핵심인 빌드와 관련된 정보를 설정할 수 있는곳 , 빌드할때 사용할 플러그인 목록을 기록한다. -->
	<build>
		<plugins>
			<plugin> <!-- JDK 1.8 -->
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java-version}</source>
					<target>${java-version}</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<argLine>-Dfile.encoding=utf-8</argLine>
					<!--<skipTests>true</skipTests> -->
				</configuration>
				
			</plugin>
		</plugins>
	</build>

	<!-- 오라클용 -->
	<repositories>
		<repository>
			<id>oracle</id>
			<name>ORACLE JDBC Repository</name>
			<url>http://maven.jahia.org/maven2</url>
		</repository>
	</repositories>

	<!-- 의존라이브러리 : 이 프로그램이 참조하는 라이브러리 -->
	<dependencies>
		<!-- Spring framework -->
		<dependency> <!-- 각각의 의존 라이브러리 정보 -->
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>${org.springframework-version}</version>
			<exclusions>
				<exclusion>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
			<version>${org.springframework-version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-orm</artifactId>
			<version>${org.springframework-version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context-support</artifactId>
			<version>${org.springframework-version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-jdbc</artifactId>
			<version>${org.springframework-version}</version>
		</dependency>
		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjweaver</artifactId>
			<version>${org.aspectj-version}</version>
		</dependency>



		<!-- servlet api -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.0.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>javax.servlet.jsp-api</artifactId>
